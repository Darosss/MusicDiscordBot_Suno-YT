{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/src/*": ["./*"],
      "@/utils/*": ["./utils/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.json"]
}
